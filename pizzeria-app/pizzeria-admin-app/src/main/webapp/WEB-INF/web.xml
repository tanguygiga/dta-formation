<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
 

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>PizzaServletWebApi</servlet-name>
  	<display-name>PizzaServletWebApi</display-name>
  	<description></description>
  	<servlet-class>webapp.PizzaServletWebApi</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PizzaServletWeb</servlet-name>
  	<display-name>PizzaServletWeb</display-name>
  	<description></description>
  	<servlet-class>webapp.PizzaServletWeb</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListerPizzaController</servlet-name>
  	<display-name>ListerPizzaController</display-name>
  	<description></description>
  	<servlet-class>webapp.ListerPizzaController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EditerPizzaController</servlet-name>
  	<display-name>EditerPizzaController</display-name>
  	<description></description>
  	<servlet-class>webapp.EditerPizzaController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>PizzaServletWebApi</servlet-name>
  	<url-pattern>/api/servlet/pizzas</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>PizzaServletWeb</servlet-name>
  	<url-pattern>/servlet/pizzas</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>ListerPizzaController</servlet-name>
  	<url-pattern>/pizzas/list</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>EditerPizzaController</servlet-name>
  	<url-pattern>/EditerPizzaController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EditerPizzaController</servlet-name>
  	<url-pattern>/pizzas/edit</url-pattern>
  </servlet-mapping>
</web-app>

